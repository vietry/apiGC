generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("SQLSERVER_URL")
}

model Foto {
  id        Int       @id(map: "PK__Foto__3213E83FFF8B0427") @default(autoincrement())
  ruta      String    @db.VarChar(50)
  tipo      String?   @db.VarChar(5)
  createdAt DateTime? @db.DateTime
  updatedAt DateTime? @db.DateTime
  Usuario   Usuario[]
}

model Todo {
  id          Int       @id(map: "PK__Todo__3213E83F6B0D13A2") @default(autoincrement())
  text        String    @db.VarChar(45)
  completedAt DateTime? @db.DateTime
  createdAt   DateTime? @db.DateTime
  updatedAt   DateTime? @db.DateTime
}

model Usuario {
  id        Int       @id(map: "PK__Usuario__3213E83F3A6CA641") @default(autoincrement())
  nombres   String    @db.VarChar(45)
  apellidos String?   @db.VarChar(45)
  password  String    @db.VarChar(255)
  celular   String?   @db.VarChar(15)
  correo    String    @db.VarChar(40)
  rol       String    @db.VarChar(10)
  idFoto    Int?
  createdAt DateTime? @db.DateTime
  updatedAt DateTime? @db.DateTime
  Foto      Foto?     @relation(fields: [idFoto], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_Usuario_Foto")
}
